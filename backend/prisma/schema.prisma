generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Priority {
  NONE
  LOW
  MEDIUM
  HIGH
}

model Task {
  id          Int      @id @default(autoincrement())
  title       String
  description String?  @default("")
  isCompleted Boolean  @default(false)
  createdAt   DateTime @default(now())
  priority    Priority @default(NONE)
}
